/*CRIANDO UM BANCO*/

CREATE DATABASE PROJETO;

/* CONECTANDO */

USE PROJETO;

/*CRIANDO A TABELA */

CREATE TABLE CLIENTE(
	NOME VARCHAR(30),
	SEXO CHAR(1);
	EMAIL VARCHAR(30),
	CPF INT(11),
	TELEFONE VARCHAR (11),
	ENDERECO VARCHAR(100),
);

/* VERIFICANDO AS TABELAS */

SHOW TABLE;

/*DESCREVER TABELA*/

DESC CLIENTE;

